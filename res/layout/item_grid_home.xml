<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click"
    android:orientation="vertical"
    android:padding="6dp" >

    <sg.togoparts.pro.gallery.FontableTextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:minLines="2"
        android:text="FontableTextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_home"
        android:layout_height="@dimen/image_home"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal" >

            <sg.togoparts.pro.gallery.FontableTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asf"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <sg.togoparts.pro.gallery.FontableTextView
                android:id="@+id/tvTimePost"
                android:text="jalsfj;safas';fjas;f"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/clock"
                android:gravity="right|center_vertical"
                android:singleLine="true" />
        </LinearLayout>

        <sg.togoparts.pro.gallery.FontableTextView
            android:id="@+id/tvPostBy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/user_icon"
            android:gravity="right"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>