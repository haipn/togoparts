<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <sg.togoparts.pro.gallery.FontableTextView
        android:id="@+id/fontableTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FontableTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <sg.togoparts.pro.gallery.FontableTextView
                android:id="@+id/fontableTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FontableTextView" />

            <sg.togoparts.pro.gallery.FontableTextView
                android:id="@+id/fontableTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FontableTextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <sg.togoparts.pro.gallery.FontableButton
            android:id="@+id/fontableButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FontableButton" />

        <sg.togoparts.pro.gallery.FontableButton
            android:id="@+id/fontableButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FontableButton" />
    </LinearLayout>

</LinearLayout>