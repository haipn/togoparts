<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="@dimen/image_thumb"
            android:layout_height="@dimen/image_thumb"
            android:src="@drawable/nophoto" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/fontableTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/label_rating"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" >

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:drawableLeft="@drawable/plus_icon"
                    android:drawablePadding="4dp" />

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:drawableLeft="@drawable/grey_icon"
                    android:drawablePadding="4dp" />

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:drawableLeft="@drawable/minus_icon"
                    android:drawablePadding="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingRight="5dp"
                    android:stretchColumns="0" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" >

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_free_ads_posted"
                            android:textSize="12sp" />

                        <sg.togoparts.gallery.FontableTextView
                            android:id="@+id/tvFreeAdPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" >

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_free_ads_quota"
                            android:textSize="12sp" />

                        <sg.togoparts.gallery.FontableTextView
                            android:id="@+id/tvQuota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" >

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_free_ads_balance"
                            android:textSize="12sp" />

                        <sg.togoparts.gallery.FontableTextView
                            android:id="@+id/tvFreeAdsBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" >

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_priority_ads_posted"
                            android:textSize="12sp" />

                        <sg.togoparts.gallery.FontableTextView
                            android:id="@+id/tvPriorityAdsPosted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" >

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_new_items_ads"
                            android:textSize="12sp" />

                        <sg.togoparts.gallery.FontableTextView
                            android:id="@+id/tvNewItemsAds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" >

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp" />

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <sg.togoparts.gallery.FontableTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/share_button_bg"
            android:padding="8dp"
            android:text="@string/label_my_ads"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvNoResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/no_result_found"
                android:textSize="20sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <com.handmark.pulltorefresh.library.PullToRefreshListView
                    android:id="@+id/lvSearchResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </com.handmark.pulltorefresh.library.PullToRefreshListView>

<!--                 <ProgressBar -->
<!--                     android:id="@+id/progressbar" -->
<!--                     android:layout_width="fill_parent" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:layout_alignParentBottom="true" -->
<!--                     android:layout_centerHorizontal="true" /> -->
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>