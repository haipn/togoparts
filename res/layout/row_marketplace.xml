<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <vn.haipn.togopart.gallery.FontableTextView
            android:id="@+id/fontableTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontableTextView" />

        <vn.haipn.togopart.gallery.FontableTextView
            android:id="@+id/fontableTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontableTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <vn.haipn.togopart.gallery.FontableTextView
            android:id="@+id/fontableTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontableTextView" />

        <vn.haipn.togopart.gallery.FontableButton
            android:id="@+id/fontableButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FontableButton" />

    </LinearLayout>

</LinearLayout>