<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/new_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp" >

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rdoFreeAd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:button="@drawable/radio_free_ad"
                        android:checked="true"
                        android:visibility="visible" />

                    <RadioButton
                        android:id="@+id/rdoPriorityAd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:button="@drawable/radio_priority_ad"
                        android:visibility="visible" />

                    <RadioButton
                        android:id="@+id/rdoNewItemAd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:button="@drawable/radio_newitem_ad"
                        android:visibility="visible" />
                </RadioGroup>

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="6dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imv1"
                            android:layout_width="@dimen/image_thumb_postad"
                            android:layout_height="@dimen/image_thumb_postad"
                            android:src="@drawable/upload_pic" />

                        <sg.togoparts.gallery.FontableTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Cover Pic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imv2"
                            android:layout_width="@dimen/image_thumb_postad"
                            android:layout_height="@dimen/image_thumb_postad"
                            android:src="@drawable/unselected_pic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imv3"
                            android:layout_width="@dimen/image_thumb_postad"
                            android:layout_height="@dimen/image_thumb_postad"
                            android:src="@drawable/unselected_pic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imv4"
                            android:layout_width="@dimen/image_thumb_postad"
                            android:layout_height="@dimen/image_thumb_postad"
                            android:src="@drawable/unselected_pic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imv5"
                            android:layout_width="@dimen/image_thumb_postad"
                            android:layout_height="@dimen/image_thumb_postad"
                            android:src="@drawable/unselected_pic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imv6"
                            android:layout_width="@dimen/image_thumb_postad"
                            android:layout_height="@dimen/image_thumb_postad"
                            android:src="@drawable/unselected_pic" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <sg.togoparts.gallery.FontableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/normal_gray"
                android:padding="10dp"
                android:text="@string/details"
                android:textAppearance="@android:style/TextAppearance.Large" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_postad"
                android:drawableLeft="@drawable/category_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/category"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/gray" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_postad"
                android:drawableLeft="@drawable/item_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/item"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/gray" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_postad"
                android:drawableLeft="@drawable/price_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/price"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/gray" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_postad"
                android:drawableLeft="@drawable/contactinfo_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/contact_info"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <!-- <sg.togoparts.gallery.FontableTextView -->
            <!-- android:id="@+id/tvInfo" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:background="@color/normal_gray" -->
            <!-- android:padding="10dp" -->
            <!-- android:text="@string/my_ads_quota" -->
            <!-- android:textAppearance="@android:style/TextAppearance.Large" /> -->


            <!-- <GridView -->
            <!-- android:id="@+id/gvInfo" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:numColumns="3" -->
            <!-- android:paddingLeft="10dp" -->
            <!-- android:paddingRight="10dp" > -->
            <!-- </GridView> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/llCheckEmail"
                android:padding="10dp" >

                <CheckBox
                    android:id="@+id/cbEmail"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <sg.togoparts.gallery.FontableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/label_check_email"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </LinearLayout>

            <sg.togoparts.gallery.FontableButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_click"
                android:text="@string/submit"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>