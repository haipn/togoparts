<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp" >

        <sg.togoparts.gallery.FontableTextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/imvLogo"
                android:layout_width="@dimen/image_thumb"
                android:layout_height="@dimen/image_thumb"
                android:paddingRight="5dp"
                android:src="@drawable/nophoto" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="5dp" >

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="FontableTextView" />

                <!-- <sg.togoparts.gallery.FontableTextView -->
                <!-- android:id="@+id/tvTel" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:text="FontableTextView" /> -->

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/location_icon"
                    android:drawablePadding="5dp"
                    android:text="FontableTextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imvPhoto"
                android:layout_width="@dimen/image_thumb"
                android:layout_height="@dimen/image_thumb"
                android:src="@drawable/nophoto" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <LinearLayout
                android:id="@+id/llOpen"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/green"
                android:gravity="center_vertical|left"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp" >

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvOpenLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <sg.togoparts.gallery.FontableTextView
                    android:id="@+id/tvRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvNewItem"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tvPromos"
                android:background="@drawable/btn_click"
                android:gravity="center"
                android:padding="6dp"
                android:text="TextView"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvPromos"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_click"
                android:gravity="center"
                android:padding="6dp"
                android:text="TextView"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

