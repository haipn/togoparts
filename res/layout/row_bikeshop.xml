<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <sg.togoparts.gallery.FontableTextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/imvLogo"
            android:layout_width="@dimen/image_thumb"
            android:layout_height="@dimen/image_thumb"
            android:src="@drawable/nophoto" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FontableTextView" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvTel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FontableTextView" />

            <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FontableTextView" />
            
        </LinearLayout>

        <ImageView
            android:id="@+id/imvPhoto"
            android:layout_width="@dimen/image_thumb"
            android:layout_height="@dimen/image_thumb"
            android:src="@drawable/nophoto" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvOpenLabel"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue"
                android:text="TextView"
                android:textColor="@android:color/white" />
        
        <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvNewItem"
                android:layout_toLeftOf="@+id/tvPromos"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="TextView"
                android:textColor="@android:color/white" />
        <sg.togoparts.gallery.FontableTextView
                android:id="@+id/tvPromos"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="TextView"
                android:textColor="@android:color/white" />
    </RelativeLayout>
	
</LinearLayout>